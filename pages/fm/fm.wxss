/* pages/fm/fm.wxss */
/*轮播图*/
.banners{
  width:100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}
/*推荐*/
.recommendContainer{
  padding: 20rpx;
}

.recommendScroll{
  display: flex;
  height:300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /*white-space: nowrap; display: block; 单行文本溢出隐藏*/
  overflow: hidden;
  text-overflow: ellipsis;
}

/*热门电台*/
.hotfm{
  padding: 20rpx;
}
.fmScroll{
  margin-top: 10rpx;
  height: calc(100vh - 152rpx);
  display: flex;
  flex-wrap: wrap;
}
.fmScroll .scrollItem{
  flex: 1;
  width: 200rpx;
  margin: 10rpx;
}
.fmScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.fmScroll .scrollItem text{
  font-size: 26rpx;
  width: 200rpx;
  white-space: nowrap; 
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
}