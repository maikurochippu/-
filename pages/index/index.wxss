/**index.wxss**/
.indexContainer .header {
  display: flex;
  padding: 10rpx;
}
.indexContainer .header image{
  width: 60rpx;
  height: 60rpx;
}

.indexContainer .header .search {
  border: 1rpx solid #eee;
  /*flex-grow: 可拉伸 flex-shrink： 可压缩 flex-basis: 当前元素的宽度*/
  /*flex默认值: flex-grow: 0, flex-shrink: 1, flex-basis: auto*/
  /*flex:1  flex-grow: 1, flex-shrink: 1, flex-basis: 0%*/
  /*flex:auto  flex-grow: 1, flex-shrink: 1, flex-basis: auto*/
  /*flex: 1会导致父元素宽度自动为100%*/
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #17abe3;
}
/*轮播图*/
.banners{
  width:100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}
/*导航*/
.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.iconfont{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #17abe3;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}
.iconfont+text{
  font-size: 26rpx;
}
/*推荐*/
.recommendContainer{
  padding: 20rpx;
}

/*推荐*/
.recommendScroll{
  display: flex;
  height:300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /*white-space: nowrap; display: block; 单行文本溢出隐藏*/
  overflow: hidden;
  text-overflow: ellipsis;
}

/*排行榜*/
.topList{
  padding: 20rpx;
}

.topListSwiper{
  height: 460rpx;
}

.swiperItem{
  width: 90%;
  background: #fbfbfb;
}

.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName{
  height: 100rpx;
  line-height:100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
